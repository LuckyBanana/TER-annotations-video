# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

OPTIONS /api/*url            controllers.Application.options(url: String)

#Videos
#GET /api/video               controllers.Videos.list()
#POST /api/video              controllers.Video.save()

#Annotations
GET /api/annotation          controllers.Annotations.list()
POST /api/annotation         controllers.Annotations.save()

#Users
#GET /api/user                controllers.Users.list()
#POST /api/user               controllers.User.createUser()


