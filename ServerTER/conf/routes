# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

OPTIONS /api/*url                      controllers.Application.options(url: String)

#Videos
GET /api/video                          controllers.Videos.list()
GET /api/video/:id					    controllers.Videos.getVideo(id: String)
GET /api/video/:id/annotations		    controllers.Videos.getAnnotationsOnVideo(id: String)
POST /api/video						    controllers.Videos.save()
POST /api/video/:id/:myDirFile          controllers.Videos.saveBinary(id: String, myDirFile: String)
DELETE /api/video/:id					controllers.Videos.delete(id: String)

#Annotations
GET /api/annotation                     controllers.Annotations.list()
GET /api/annotation/:id					controllers.Annotations.getById(id: String)
POST /api/annotation                    controllers.Annotations.save()
DELETE /api/annotation/:id				controllers.Annotations.delete(id: String)

#Users
#GET /api/user                        controllers.Users.list()
#POST /api/user                       controllers.User.createUser()


